<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/greentea"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="120dp"
                android:id="@+id/gambarmenu"
                android:layout_centerHorizontal="true"
                android:src="@drawable/jahe"
                android:layout_height="120dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/namamenu"
                android:text="Nama Menu"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:layout_below="@+id/gambarmenu"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/hargamenu"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/namamenu"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="casual"
                android:text="Harga Menu"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/satuan"
                android:textSize="25dp"
                android:layout_centerHorizontal="true"
                android:text="Satuan"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/hargamenu"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>