<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/greentea">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/relatif01"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="120dp"
                android:id="@+id/gambarmenu"
                android:onClick=""
                android:src="@drawable/jahe"
                android:layout_height="120dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/namamenu"
                android:text="Nama Menu"
                android:textSize="25dp"
                android:layout_toRightOf="@+id/gambarmenu"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/hargamenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namamenu"
                android:textSize="25dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/gambarmenu"
                android:fontFamily="casual"
                android:text="Harga Menu" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/satuan"
                android:textSize="25dp"
                android:text="Satuan"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/gambarmenu"
                android:layout_below="@id/hargamenu"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>