<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/teal_200"
    tools:context=".MainActivity2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gambar_menu"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/jahe" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Nama menu"
            android:textSize="25dp"
            android:id="@+id/nama_menu"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_below="@id/gambar_menu"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Harga Menu"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_below="@id/nama_menu"
            android:id="@+id/harga_menu"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Satuan Menu"
            android:textSize="20dp"
            android:id="@+id/satuan_menu"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_below="@id/harga_menu"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Total Pesan : "
            android:id="@+id/txtpesan"
            android:layout_below="@+id/satuan_menu"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/totalpesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtpesan"
            android:ems="5"
            android:inputType="number" />

        <Button
            android:id="@+id/btn_pesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="panggil"
            android:layout_below="@+id/totalpesan"
            android:text="Pesan" />



    </RelativeLayout>

</LinearLayout>