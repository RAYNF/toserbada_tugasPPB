<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/gambar1"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/jeruk" />
<TextView
    android:layout_width="96dp"
    android:layout_below="@+id/gambar1"
    android:id="@+id/text"
    android:text="jumlah pesan"
    android:textSize="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/jmlhpesan"
        android:hint="banyak pesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambar1"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/text"
        android:ems="13" />

    <TextView
        android:layout_width="96dp"
        android:id="@+id/texttot"
        android:layout_below="@+id/text"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:text="total"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/totalharga"
        android:hint="totalharga"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/jmlhpesan"
        android:layout_toRightOf="@+id/texttot"
        android:ems="13" />
</RelativeLayout>